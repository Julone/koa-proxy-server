{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    // "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./public/**/*"]
}
